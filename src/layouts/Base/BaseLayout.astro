---
import BaseHeader from './BaseHeader.astro';
---

<div class="common-layout">
  <div class="common-layout_header">
    <BaseHeader />
  </div>
  <main class="common-layout_main">
    <slot />
  </main>
</div>

<style lang="scss">
  @use '@/styles/_develop/+' as *;

  .common-layout {
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }

  .common-layout_header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: var(--z-header);
    width: 100%;
    pointer-events: none;
  }

  .common-layout_main {
    flex: 1;
  }

  .common-layout_footer {
    position: relative;
    padding-block-start: 7.5vw;
    pointer-events: none;
  }
</style>
